# ============================================================================
# Django Configuration
# ============================================================================

# CRITICAL: Generate new secret key for production!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-change-this-in-production-use-generator-above

# CRITICAL: Set to False in production!
DEBUG=True

# Allowed hosts (comma-separated, add your domain in production)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ============================================================================
# Database Configuration
# ============================================================================

# Development (SQLite - default, comment out for production)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# Production (PostgreSQL - recommended)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=ovpn_db
DB_USER=ovpn_user
DB_PASSWORD=change_this_strong_password_123
DB_HOST=localhost
DB_PORT=5432

# ============================================================================
# Redis Configuration
# ============================================================================

REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# Email Configuration
# ============================================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ============================================================================
# CORS Settings (if using API from different domain)
# ============================================================================

CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# OpenVPN Default Settings
# ============================================================================

DEFAULT_OPENVPN_PORT=1194
DEFAULT_OPENVPN_PROTOCOL=udp
DEFAULT_DNS_1=8.8.8.8
DEFAULT_DNS_2=8.8.4.4

# ============================================================================
# SSH Default Settings
# ============================================================================

DEFAULT_SSH_PORT=22
DEFAULT_SSH_USER=root

# ============================================================================
# Security Settings (Production - set to True)
# ============================================================================

# HTTPS redirect (requires valid SSL certificate)
SECURE_SSL_REDIRECT=False

# Use X-Forwarded-Host header (if behind reverse proxy)
USE_X_FORWARDED_HOST=False

# ============================================================================
# Development Settings
# ============================================================================

# Enable Django Debug Toolbar (development only)
ENABLE_DEBUG_TOOLBAR=True
